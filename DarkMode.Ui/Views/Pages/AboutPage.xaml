<Page x:Class="DarkMode.Ui.Views.Pages.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:DarkMode.Ui.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:i18N="http://schemas.lepo.co/i18n/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="1000" d:DesignWidth="800"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Title="AboutPage">
    <StackPanel x:Name="RootPanel">
        <ui:CardExpander
            Margin="0,8,0,0"
            HorizontalContentAlignment="Stretch"
            Icon="{ui:SymbolIcon Info24}"
            IsEnabled="True"
            IsExpanded="True" VerticalContentAlignment="Stretch">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="13"
                            FontWeight="Medium"
                            Text="DarkMode 信息" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="包含版本信息等内容" />
                    </StackPanel>
                    <ui:ProgressRing 
                        x:Name="ProgressRing"
                        Height="20px"
                        Width="20px"
                        Grid.Column="0"
                        IsIndeterminate="True"
                        Progress="80"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0,0,16,0" Visibility="Hidden"
                        />
                    <ui:Button
                        x:Name="checkUpdateBtn"
                        Grid.Column="1"
                        Margin="0,0,16,0"
                        Padding="30,6"
                        VerticalAlignment="Center"
                        Appearance="Secondary"
                        Content="检查更新" />
                </Grid>
            </ui:CardExpander.Header>
            <Grid Width="Auto" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="147*" />
                    <ColumnDefinition Width="800*" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="渠道"
                    FontSize="13"
                    Margin="0,0,0,10"
                    />
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="版本"
                    FontSize="13"
                    Margin="0,0,0,10"
                    />
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="2"
                    Text="开发者"
                    FontSize="13"
                    Margin="0,0,0,10"
                    />
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="3"
                    Text="版权"
                    FontSize="13"
                    Margin="0,0,0,10"
                    />
                <TextBlock
                    x:Name="Channel"
                    Grid.Column="1"
                    Grid.Row="0"
                    FontSize="13"
                    />
                <TextBlock
                    x:Name="Version"
                    Grid.Column="1"
                    Grid.Row="1"
                    FontSize="13"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Text="Lunova Studio - Gabriel Ryder"
                    FontSize="13"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="3"
                    Text="©2022-2023 Lunova-Studio. All Rights Reserved."
                    FontSize="13"
                    />
            </Grid>
        </ui:CardExpander>
        
        <ui:HyperlinkButton Margin="0,10,0,0" NavigateUri="https://github.com/Melon-Studio/DarkMode2" Icon="Link48" Content="DarkMode 的 Github 主页"/>

        <ui:CardExpander ContentPadding="0" Icon="{ui:SymbolIcon GiftCardMoney24}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        FontTypography="Body"
                        Text="捐助" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="支持开源项目持续开发，你的每一份心意都将助力功能迭代与维护" />
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <ui:FontIcon FontFamily="{StaticResource IconFont}" Glyph="&#xe6f4;" FontSize="20" />
                            <TextBlock Text="通过微信捐助" />
                        </StackPanel>
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0"
                    NavigateUri="">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <ui:FontIcon FontFamily="{StaticResource IconFont}" Glyph="&#xe666;" FontSize="20" />
                            
                            <TextBlock Text="通过支付宝捐助" />
                        </StackPanel>
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
                <ui:Anchor
                    Margin="0"
                    Padding="16"
                    HorizontalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    Background="Transparent"
                    BorderThickness="0,1,0,1"
                    CornerRadius="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                            <ui:FontIcon FontFamily="{StaticResource IconFont}" Glyph="&#xe635;" FontSize="20" />
                            <TextBlock Text="通过爱发电捐助" />
                        </StackPanel>
                        <ui:SymbolIcon Grid.Column="1" Symbol="Link24" />
                    </Grid>
                </ui:Anchor>
            </StackPanel>
        </ui:CardExpander>
        
        <ui:CardAction
                Margin="0,8,0,0"
                Icon="{ui:SymbolIcon CommentMultiple24}"
                Tag="dialog">
            <StackPanel>
                <TextBlock
                        FontSize="13"
                        FontWeight="Medium"
                        Text="帮助社区" />
                <TextBlock
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="点击进入 DarkMode 社区获取帮助" />
            </StackPanel>
        </ui:CardAction>
        
        <ui:CardAction
            Margin="0,8,0,0"
            HorizontalContentAlignment="Stretch"
            Icon="{ui:SymbolIcon NotepadPerson24}"
            IsEnabled="True"
            VerticalContentAlignment="Stretch">
            <StackPanel>
                <TextBlock
                    FontSize="13"
                    FontWeight="Medium"
                    Text="用户协议" />
                <TextBlock
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="DarkMode 对于用户使用服务的行为规范与权益约定" />
            </StackPanel>
        </ui:CardAction>

        <ui:CardAction
            Margin="0,8,0,0"
            HorizontalContentAlignment="Stretch"
            Icon="{ui:SymbolIcon InprivateAccount24}"
            IsEnabled="True"
            VerticalContentAlignment="Stretch">
            <StackPanel>
                <TextBlock
                    FontSize="13"
                    FontWeight="Medium"
                    Text="隐私政策" />
                <TextBlock
                    FontSize="12"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="DarkMode 关于如何保护用户使用应用时，涉及的个人信息与数据安全" />
            </StackPanel>
        </ui:CardAction>

        <ui:CardExpander
            Margin="0,8,0,0"
            HorizontalContentAlignment="Stretch"
            Icon="{ui:SymbolIcon People24}"
            IsEnabled="True"
            IsExpanded="False" VerticalContentAlignment="Stretch">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="13"
                            FontWeight="Medium"
                            Text="贡献者" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="参与了 DarkMode 仓库代码贡献的用户" />
                    </StackPanel>

                </Grid>
            </ui:CardExpander.Header>
            <Grid Width="Auto" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="XiaoFans"
                    FontSize="13"
                    Margin="0,0,0,10"
                    />

            </Grid>
        </ui:CardExpander>

        <ui:CardExpander
            Margin="0,8,0,0"
            HorizontalContentAlignment="Stretch"
            Icon="{ui:SymbolIcon EmojiSparkle24}"
            IsEnabled="True"
            IsExpanded="False" VerticalContentAlignment="Stretch">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="13"
                            FontWeight="Medium"
                            Text="鸣谢" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="为 DarkMode 发展作出贡献，值得展示的用户或团体" />
                    </StackPanel>

                </Grid>
            </ui:CardExpander.Header>
            <Grid Width="Auto" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="doudou5776"
                    FontSize="13"
                    Margin="0,0,0,10"
                    />

            </Grid>
        </ui:CardExpander>

        <ui:CardExpander
            Margin="0,8,0,0"
            HorizontalContentAlignment="Stretch"
            Icon="{ui:SymbolIcon ContactCardRibbon24}"
            IsEnabled="True"
            IsExpanded="False" VerticalContentAlignment="Stretch">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <TextBlock
                            FontSize="13"
                            FontWeight="Medium"
                            Text="开放源代码许可" />
                        <TextBlock
                            FontSize="12"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="DarkMode 使用第三方库的版权与许可声明" />
                    </StackPanel>
                </Grid>
            </ui:CardExpander.Header>
            <Grid Width="Auto" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="90" />
                    <RowDefinition Height="90" />
                    <RowDefinition Height="90" />
                    <RowDefinition Height="90" />
                    <RowDefinition Height="90" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="名称"
                    FontSize="13"
                    Margin="0,0,0,10" FontWeight="Bold" HorizontalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="0"
                    Text="作者"
                    FontSize="13"
                    Margin="0,0,0,10" FontWeight="Bold" HorizontalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="2"
                    Grid.Row="0"
                    Text="版权"
                    FontSize="13"
                    Margin="0,0,0,10" FontWeight="Bold" HorizontalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="3"
                    Grid.Row="0"
                    Text="许可"
                    FontSize="13" FontWeight="Bold" HorizontalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="NHotkey.Wpf"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="1"
                    Text="Thomas Levesque"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="2"
                    Grid.Row="1"
                    Text="Copyright © 2020&#x000A;Thomas Levesque&#x000A;Licensed under the&#x000A;Apache-2.0 License."
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <ui:HyperlinkButton
                    Margin="0,0,0,0"
                    Content="Apache-2.0"
                    Grid.Column="3"
                    Grid.Row="1"
                    Icon="Link48"
                    NavigateUri="https://licenses.nuget.org/Apache-2.0" HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="2"
                    Text="WPF-UI"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="2"
                    Text="lepo.co"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="2"
                    Grid.Row="2"
                    Text="Copyright © 2022&#x000A;lepo.co&#x000A;Licensed under the&#x000A;MIT License."
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <ui:HyperlinkButton
                    Margin="0,0,0,0"
                    Content="MIT"
                    Grid.Column="3"
                    Grid.Row="2"
                    Icon="Link48"
                    NavigateUri="https://licenses.nuget.org/MPL-2.0" HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="3"
                    Text="LibreHardwareMonitorLib"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="3"
                    Text="LibreHardwareMonitorLib"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="2"
                    Grid.Row="3"
                    Text="Copyright © 2022&#x000A;LibreHardwareMonitorLib&#x000A;Licensed under the&#x000A;MPL-2.0 License."
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <ui:HyperlinkButton
                    Margin="0,0,0,0"
                    Content="MPL-2.0"
                    Grid.Column="3"
                    Grid.Row="3"
                    Icon="Link48"
                    NavigateUri="https://licenses.nuget.org/MPL-2.0" HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="4"
                    Text="Log4net"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="4"
                    Text="Apache"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="2"
                    Grid.Row="4"
                    Text="Copyright © 2022&#x000A;Apache&#x000A;Licensed under the&#x000A;Apache-2.0 License."
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <ui:HyperlinkButton
                    Margin="0,0,0,0"
                    Content="Apache-2.0"
                    Grid.Column="3"
                    Grid.Row="4"
                    Icon="Link48"
                    NavigateUri="https://licenses.nuget.org/Apache-2.0" HorizontalAlignment="Center" />
                <TextBlock
                    Grid.Column="0"
                    Grid.Row="5"
                    Text="Newtonsoft.Json"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="5"
                    Text="James Newton-King"
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <TextBlock
                    Grid.Column="2"
                    Grid.Row="5"
                    Text="Copyright © 2021&#x000A;James Newton-King&#x000A;Licensed under the&#x000A;MIT License."
                    FontSize="13"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    />
                <ui:HyperlinkButton
                    Margin="0,0,0,0"
                    Content="MIT"
                    Grid.Column="3"
                    Grid.Row="5"
                    Icon="Link48"
                    NavigateUri="https://licenses.nuget.org/MIT" HorizontalAlignment="Center" />
            </Grid>
        </ui:CardExpander>

    </StackPanel>
</Page>
